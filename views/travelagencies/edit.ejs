<%- include("../partials/header") %>

<div class="row">
	<h1 style="text-align:center">Edit <%= traAg.name %></h1>
	<div style="width:30%; margin:25px auto">
		<form action="/travelagencies/<%= traAg._id %>?_method=PUT" method="POST" enctype="multipart/form-data" autocomplete="off">
			<div class="form-group">
				<label for="aname">Name<span> *</span></label>
				<input class="form-control" id="aname" type="text" name="travelagencies[name]" placeholder="Name of Travel Agency" value="<%= traAg.name %>" required>
			</div>
			<div class="form-group">
				<label for="image">Image</label>
                <input type="file" name="image" id="image" accept="image/*">
			</div>
			<div class="form-group">
				<label for="email">E-mail<span> *</span></label>
                <input class="form-control" id="email" type="email" name="travelagencies[email]" placeholder="E-mail of the Travel Agency" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" title="Invalid email. Example : example@email.com" value="<%= traAg.email %>" required>
            </div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Update</button>
			</div>
		</form>
	</div>
</div>

<%- include("../partials/footer") %>