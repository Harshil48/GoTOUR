<%- include("../partials/header") %>

<div class="row">
	<h1 style="text-align:center">Contact <%= traAg.name %></h1>
	<div style="width:30%; margin:25px auto">
		<form action="/travelagencies/<%= traAg._id %>/contact" method="POST" autocomplete="off">
			<div class="form-group">
        		<label for="sub">Subject<span> *</span></label>
                <input class="form-control" id="sub" type="text" name="subject" placeholder="Subject of the mail" required>
            </div>
			<div class="form-group">
				<label for="msg">Message<span> *</span></label>
				<textarea class="form-control" id="msg" name="message" placeholder="Enter your message here... (required)" rows="5" required></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Send</button>
			</div>
		</form>
	</div>
</div>

<%- include("../partials/footer") %>