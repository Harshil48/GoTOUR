<%- include("../partials/header") %>

<div class="row">
    <h1 style="text-align: center">Edit Comment</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/touristplaces/<%= tourPlace_id %>/comments/<%= cmnt._id %>?_method=PUT" method="POST" autocomplete="off">
            <div class="form-group">
                <label for="rating">Leave a rating:</label>
                <fieldset class="starability-basic form-group" id="rating">
                <div>
                <input type="radio" id="first-rate5" name="comment[rating]" value="5" <% if(cmnt.rating===5){ %> checked <% } %> />
                <label for="first-rate5" title="5 stars - Amazing">
                    <%- '<span class="fas fa-star checked"></span>'.repeat(5) %>
                </label>
                </div>
                <div>
                <input type="radio" id="first-rate4" name="comment[rating]" value="4" <% if(cmnt.rating===4){ %> checked <% } %> />
                <label for="first-rate4" title="4 stars - Very good">
                    <%- '<span class="fas fa-star checked"></span>'.repeat(4) %>
                </label>
                </div>
                <div>
                <input type="radio" id="first-rate3" name="comment[rating]" value="3" <% if(cmnt.rating===3){ %> checked <% } %> />
                <label for="first-rate3" title="3 stars - Average">
                    <%- '<span class="fas fa-star checked"></span>'.repeat(3) %>
                </label>
                </div>
                <div>
                <input type="radio" id="first-rate2" name="comment[rating]" value="2" <% if(cmnt.rating===2){ %> checked <% } %> />
                <label for="first-rate2" title="2 stars - Not good">
                    <%- '<span class="fas fa-star checked"></span>'.repeat(2) %></label>
                </div>
                <div>
                <input type="radio" id="first-rate1" name="comment[rating]" value="1" <% if(cmnt.rating===1){ %> checked <% } %> />
                <label for="first-rate1" title="1 star - Terrible">
                    <%- '<span class="fas fa-star checked"></span>'.repeat(1) %>
                </label>
            	</div>
                </fieldset>
            </div>
            <div class="form-group">
                <textarea class="form-control" type="text" name="comment[text]" placeholder="Comment your views here ....." rows="5" required><%= cmnt.text %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Update</button>
            </div>
        </form>
    </div>
</div>

<%- include("../partials/footer") %>