					<h4><%= tp.name %></h4>
				</div>
				<div>
					<p>
						<a href="/touristplaces/<%= tp._id %>" class="btn btn-primary btn">More Info</a>
					</p>
				</div>
			</div>
		</div>
		<% }) } %>
	</div>
</div>


