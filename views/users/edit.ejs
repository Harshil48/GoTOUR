<%- include("../partials/header") %>

<div class="row">
	<h1 style="text-align:center">Edit Your Profile</h1>
	<div style="width:30%; margin:25px auto">
		<form action="/users/<%= user._id %>?_method=PUT" method="POST" enctype="multipart/form-data" autocomplete="off">
			<div class="form-group">
				<label for="fname">First Name<span> *</span></label>
                <input class="form-control" id="fname" type="text" name="user[firstname]" placeholder="first name" value="<%= user.firstname %>" required>
            </div>
            <div class="form-group">
				<label for="lname">Last Name</label>
                <input class="form-control" id="lname" type="text" name="user[lastname]" placeholder="last name" value="<%= user.lastname %>">
			</div>
			<div class="form-group">
				<label for="image">Profile Image</label>
                <input type="file" name="profileimage" id="image" accept="image/*">
            </div>
			<div class="form-group">
				<input class="form-control" type="text" name="user[username]" placeholder="Username (required)" value="<%= user.username %>" required>
			</div>
			<div class="form-group">
				<label for="email">E-mail<span> *</span></label>
                <input class="form-control" id="email" type="email" name="user[email]" placeholder="example@email.com" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" title="Invalid email. Example : example@email.com" value="<%= user.email %>" required>
            </div>
			<div class="form-group">
				<label for="desc">About Yourself</label>
				<textarea class="form-control" id="desc" name="user[about]" placeholder="Write Something ....." rows="5"><%- user.about %></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Update</button>
			</div>
		</form>
	</div>
</div>

<%- include("../partials/footer") %>