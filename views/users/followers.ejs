<%- include("../partials/header") %>

<div class="row" id="user">
	<div class="col">
		<h2><%= user.username %>'s followers :</h2>
		<hr>
		<% if (user.followers.length<1) { %>
		<h3><em>No followers yet.</em></h3>
		<% } else { %>
		<% user.followers.forEach(function(follower){ %>
		<div class="col-md-3 col-sm-4 col-xs-6 text-center">
			<div class="thumbnail" id="follow">
				<img class="img-circle" src= "<%= follower.profileimage %>">
				<div class="caption">
					<a href="/users/<%= follower._id %>"><h4><%= follower.firstname + " " + follower.lastname %></h4></a>
				</div>
			</div>
	    </div>
		<% }) } %>
	</div>
</div>

<%- include("../partials/footer") %>